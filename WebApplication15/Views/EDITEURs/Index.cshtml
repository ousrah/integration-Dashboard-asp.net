@model IEnumerable<WebApplication15.EDITEUR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<input type="text" id="txtRecherche" name="txtRecherche" value="" />
<input type="button" id="btnRecherche" name="btnRecherche" value="chercher" />




<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div id="lstEditeurs">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NOMED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ADRED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VILLEED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TELED)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ADRED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VILLEED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TELED)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.NOMED }) |
            @Html.ActionLink("Details", "Details", new { id = item.NOMED }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.NOMED })
        </td>
    </tr>
        }

    </table>
</div>

@section scripts{
    <script>


      

        $("document").ready(function () {

            $("#btnRecherche").click(function () {
                // d="chercher="+$("#txtRecherche").val()+"&var2=val2";
                d = {
                    'chercher': $("#txtRecherche").val(),
                  //  'var2': "val2"
                };
                //alert(d)

                $.ajax({
                    type: "POST",
                    url: "/Editeurs/getListe",
                    data: d,

                    success: function (response) {
                        $("#lstEditeurs").html(response);
                    }

                });




            });

        });
    </script>

}